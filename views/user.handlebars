<div class="column bg-secondary text-white font-weight-bold text-center">
    <div class="container">
        <div class="user-card">
            <h3 class="text-secondary" id="userId">{{user.id}}</h3>
            <h3>{{user.email}}</h3>
            <h3>{{user.name}}</h3>
        </div>
    </div>
    <h2 class="title pb-4"> Edit Your Information:</h2>
    <form class="edit-form">
        <div class="form-group mb-2">
            <label for="email-edit">New Email:</label>
            <input type="text" id="email-edit" />
        </div>
        <div class="form-group mb-2">
            <label for="name-edit">New Name:</label>
            <input type="text" id="name-edit" />
        </div>
        <div class="form-group mb-2">
            <label for="password-edit">New Password:</label>
            <input type="password" id="password-edit" />
        </div>
        <div>
            <button type="submit" class="button btn-success text-white">Edit-Account</button>
        </div>
    </form>
</div>

<script src="/js/editUser.js"></script>
